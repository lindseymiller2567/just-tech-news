<div class="comments">
    <!-- iterate over the comments array, the "each" is an Handlebars.js helper -->
    {{#each this}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>